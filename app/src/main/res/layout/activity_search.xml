<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SearchActivity"
    android:background="#eeeeee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:background="@drawable/background_relative"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="9dp">
        <EditText
            android:id="@+id/edKeySearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imgSearchMain2"
            android:hint="  Tìm kiếm trên Youtube"
            android:textColorHint="#9e9e9e"
            android:textColor="#000000"
            android:textSize="19sp"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:layout_toRightOf="@id/imgSettingMain2"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:id="@+id/imgSearchMain2"
            android:src="@drawable/ic_micro"
            android:scaleType="fitXY"
            android:onClick="EventClickSearch"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:id="@+id/imgSettingMain2"
            android:src="@drawable/ic_setting" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayout"
        android:background="@drawable/background_relative2"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"/>
    </RelativeLayout>

</RelativeLayout>